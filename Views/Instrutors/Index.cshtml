@model IEnumerable<GymAcess.Models.Instrutor>

@{
    ViewData["Title"] = "Index";
}

<div class="container ">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Instrutores</h1>
        <a class="btn btn-success mx-2" asp-action="Create" class="bi bi-file-earmark-plus mx-2"><i class="bi bi-person-add mx-2"></i>Cadastrar novo instrutor</a>
    </div>

    <table class="table table-light table-hover mt-5">
    <thead>
            <tr>
                <th scope="col">Título Profissional</th>
                <th scope="col">Nome</th>
                <th scope="col">Status</th>
                <th></th>
            </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TituloProf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

                    <td>
                        <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                        <a class="btn btn-info mx-2" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi bi-plus-square mx-2"></i>Detalhes</a>
                        <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>