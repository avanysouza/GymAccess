@model IEnumerable<GymAcess.Models.Exercicio>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

<div class="d-flex justify-content-between align-items-center mb-5">
    <h1>Exercícios</h1>
        <a class="btn btn-success mx-2" asp-action="Create" class="bi bi-file-earmark-plus mx-2"><i class="bi bi-universal-access mx-2"></i>Cadastrar novo exercício</a>
</div>

    <table class="table table-light table-hover mt-5">
    <thead>
        <tr>
                <th scope="col">Exercício</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
                    <td>
                        <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                        <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>