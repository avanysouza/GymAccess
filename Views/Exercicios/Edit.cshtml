@model GymAcess.Models.Exercicio

@{
    ViewData["Title"] = "Edit";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Edição de Exercícios</h1>
    </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Descricao" class="form-label text-light"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="w-50 btn btn-success">Editar</button>
            <a class="w-50 btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
